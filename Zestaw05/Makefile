BUBBLESORT = BubbleSort
GENERATOR = Generator
INSERTIONSORT = InsertionSort
SELECTIONSORT = SelectionSort
CZAS = Czas
SELECTIONSORTZL = SelectionSortZl


BUBBLESORTEXEC = $(BUBBLESORT).x
GENERATOREXEC  = $(GENERATOR).x
INSERTIONSORTEXEC = $(INSERTIONSORT).x
SELECTIONSORTEXEC = $(SELECTIONSORT).x
CZASEXEC = $(CZAS).x
SELECTIONSORTZLEXEC = $(SELECTIONSORTZL).x

BUBBLESORTOBJS  = $(BUBBLESORT).o
GENERATOROBJS  = $(GENERATOR).o
INSERTIONSORTOBJS  = $(INSERTIONSORT).o
SELECTIONSORTOBJS = $(SELECTIONSORT).o
CZASOBJS = $(CZAS).o
SELECTIONSORTZLOBJS = $(SELECTIONSORTZL).o

CXXFLAGS = -Wall -pedantic -O3
LFLAGS = -Wall -pedantic -O

CO = g++
LD = $(CO)

%.o: %.cxx
	$(CO) $(CFLAGS) -c $<

.PHONY: all clean

all: $(BUBBLESORTEXEC) $(GENERATOREXEC) $(INSERTIONSORTEXEC) $(SELECTIONSORTEXEC) $(CZASEXEC) $(SELECTIONSORTZLEXEC)
$(BUBBLESORTEXEC): $(BUBBLESORTOBJS)
		$(LD) -o $@ $(LFLAGS) $^
$(GENERATOREXEC): $(GENERATOROBJS)
		$(LD) -o $@ $(LFLAGS) $^
$(INSERTIONSORTEXEC): $(INSERTIONSORTOBJS)
		$(LD) -o $@ $(LFLAGS) $^
$(SELECTIONSORTEXEC): $(SELECTIONSORTOBJS)
		$(LD) -o $@ $(LFLAGS) $^
$(CZASEXEC): $(CZASOBJS)
		$(LD) -o $@ $(LFLAGS) $^
$(SELECTIONSORTZLEXEC): $(SELECTIONSORTZLOBJS)
		$(LD) -o $@ $(LFLAGS) $^
clean:
		rm -f *.o  *~ *.a *.so *.x *.out *.exe 
